{
    "name": "openauto-helper",
    "version": "1.0.0",
    "description": "smakowity wspomagacz brachu",
    "main": "build/main.js",
    "scripts": {
        "postinstall": "electron-builder install-app-deps",
        "build": "tsc",
        "postbuild": "yarn run gauge:build && yarn run copy-files",
        "copy-files": "cp -r src/public build",
        "dev": "yarn build && electron build/main.js",
        "pack": "electron-builder --dir",
        "dist": "electron-builder --armv7l",
        "gauge:build": "coffee -c -o src/public/gauge.js src/gauge/gauge.coffee",
        "push": "rsync -r ./ pi@192.168.1.21:/home/pi/openauto-helper --filter=':- .gitignore'",
        "pipeline": "yarn run build && yarn run dist"
    },
    "keywords": [],
    "author": {
        "name": "Dariusz StinkyCheese",
        "email": "dariusz.majnert@gmail.com"
    },
    "homepage": "https://github.com/b0czek/openauto-helper",
    "license": "ISC",
    "dependencies": {
        "ds18b20-raspi-typescript": "^0.4.0",
        "i2c-bus": "^5.2.1",
        "iniparser": "^1.0.5",
        "lodash": "^4.17.21",
        "onoff": "^6.0.2"
    },
    "devDependencies": {
        "@types/i2c-bus": "^5.1.0",
        "@types/iniparser": "^0.0.29",
        "@types/lodash": "^4.14.168",
        "@types/node": "^14.14.37",
        "@types/whatwg-url": "^8.2.0",
        "coffeescript": "^2.5.1",
        "electron": "^12.0.2",
        "electron-builder": "^22.10.5",
        "typescript": "^4.2.4"
    },
    "build": {
        "appId": "com.openauto.helper",
        "artifactName": "openauto-helper.${ext}",
        "linux": {
            "target": [
                "AppImage"
            ],
            "asar": false
        },
        "extends": null,
        "files": [
            "build/**/*"
        ],
        "directories": {
            "buildResources": "assets"
        }
    }
}
